{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "reviewers": [
    "mrzzy"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^.*\\.pkr\\.hcl$"],
      "matchStrings": [
        "version *= *\"(?<currentValue>.*)\"\\s+source *= *\"github\\.com\\/(?<owner>.+)\\/(?<repo>.+)\""
      ],
      "depNameTemplate": "{{{ owner }}}/packer-plugin-{{{ repo }}}",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "hashicorp"
    },
    {
      "fileMatch": ["roles\\/.*\\/defaults\\/.*\\.yaml$"],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)"
      ],
      "currentValueTemplate": "1.6.3",
      "versioningTemplate": "loose"
    }
  ]
}
